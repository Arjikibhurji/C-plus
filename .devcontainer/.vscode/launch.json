{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) Launch in Codespaces",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/.devcontainer/build/main",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/.devcontainer",
      "preLaunchTask": "build debug",
      "externalConsole": true,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}

